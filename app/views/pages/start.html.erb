<div class="container" style="width: 450px; margin-top: 100px">
  <div class="myflash">
  </div>

  <div>
    <img src="http://graph.facebook.com/<%= @selected_friend["id"] %>/picture?width=400&height=400" />
    <br /><br />
    <div>What is your friend's name?</div>
    <form name="myform" id="myform">
      <%@names.shuffle.each do |name| %>
        <input type="radio" name="myradio" value="<%= name %>"> <%= name %><br />
      <% end %>
    </form>
    <button type="submit" class="btn btn-primary" id="mycheck">Check</button>
    <%= link_to "Next", root_path, class: "btn btn-success mynext" %>
    <br />
  </div>
  <div style="display: none" id="myfriend"><%= @selected_friend["name"] %></div>
</div>